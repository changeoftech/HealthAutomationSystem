
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Citizen Login Page</title>

    <style>
        #ana_div {
            height: auto;
            width: auto;
            margin-right: auto;
            margin-left: auto;
            margin: 50px;
            padding-left: 400px;
            padding-right: 400px;
            padding-top: 80px;
        }

    </style>
</head>
<body>

    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div id="ana_div">

            <fieldset>
                <legend>Hasta Kayıt Giriş Ekranı</legend>

                <table>
                    <tr>
                        <td>@Html.Label("TC Kimlik Numarası : ")</td>
                        <td>@Html.TextBox("txtTckn")</td>
                    </tr>          
                    <tr>
                        <td>@Html.Label("Kullanıcı Giriş Şifresi : ")</td>
                        <td>@Html.TextBox("txtUserPassword")</td>
                    </tr>
                </table>

                <p>
                    <input type="submit" value="Giriş" />
                </p>
            </fieldset>
        </div>
    }
</body>
</html>


